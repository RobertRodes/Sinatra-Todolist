<script type="text/javascript">
  function myConfirm() {
    return confirm('Do you really want to delete that?') 
  }
</script>

<section id="todos">
  <header>
    <h2>Editing list &quot;<%= @list[:name] %>&quot; ...</h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_id  %>/destroy" method="post" class="delete" onsubmit="return myConfirm()">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @list_id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>" />
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @list_id %>">Cancel</a>
  </fieldset>
</form>